        <h4 class="">
          {{post.data.meta}}
        </h4>
        <a class="post-list__more" href="{{ post.url }}">leggi <i  style='font-size:15px;'class="fas fa-external-link-alt"></i> </a>
    </li>
      {%- endfor -%}
      
    </ul>
